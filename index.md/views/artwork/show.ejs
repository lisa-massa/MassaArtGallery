<% layout('/layouts/boilerplate')%>
<head>
    <title><%=artworks.title%> | <%=artworks.artist%></title>
</head>

    <div class="row mb-4">

        <div class="col-sm-6">
                <img src="<%= artworks.image[0].url %>" class="card-img" alt="...">
        </div>
                
        <div class="d-flex col-sm-6">
            <div class="card" style="width:40em; border:none;">
                <div class="card-body">
                    <h4 class="card-title fs-1">
                       <em><%= artworks.title %></em>, <%=artworks.year%>
                    </h4>
                    <hr>
                    <h4 class="fw-lighter fs-4 lh-1"><%= artworks.medium%></h4>
                    <h4 class="fw-lighter fs-4 lh-1"><%= artworks.measurementsCm %></h4>
                    <h4 class="fw-lighter fs-4 lh-1 mb-5"><%= artworks.artist %></h4>
                    <div class="d-grid gap-2 col-sm-8 mx-auto">
                        <button class="btn btn-dark rounded-pill" type="button">Purchase</button>
                        <button class="btn btn-outline-secondary rounded-pill" type="button">Inquire</button>
                    </div>
                </div>
                
                
